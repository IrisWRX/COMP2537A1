<%- include("templates/header") %>
<main class="form-signin w-100 m-auto text-center">
  <div class="d-flex gap-2 justify-content-center py-7">
    <form action="/submitUser" method="post">
      <h1 class="h3 mb-3 fw-normal mb-4">Please sign up</h1>
      <div class="form-floating">
        <input
          type="text"
          name="username"
          class="form-control"
          id="floatingPassword"
          placeholder="Name"
        />
        <label for="floatingPassword">Name</label>
      </div>
      <div class="form-floating">
        <input
          type="email"
          name="email"
          class="form-control"
          id="floatingInput"
          placeholder="Email"
        />
        <label for="floatingInput">Email address</label>
      </div>
      <div class="form-floating">
        <input
          type="password"
          name="password"
          class="form-control"
          id="floatingPassword"
          placeholder="Password"
        />
        <label for="floatingPassword">Password</label>
      </div>
      <button class="w-100 btn btn-lg btn-primary mt-4" type="submit">
        Sign up
      </button>
    </form>
  </div>
</main>
<%- include("templates/footer") %>
